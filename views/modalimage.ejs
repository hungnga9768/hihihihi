<div
  id="imageModal"
  style="
    display: none;
    position: fixed;
    z-index: 9999;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    overflow: auto;
  "
>
  <div
    style="
      background: white;
      margin: 50px auto;
      padding: 20px;
      max-width: 800px;
      border-radius: 8px;
      position: relative;
    "
  >
    <h4>Chọn ảnh có sẵn</h4>
    <!-- Nút đóng modal đã có type="button" -->
    <button
      type="button"
      onclick="closeImageModal()"
      style="
        position: absolute;
        top: 10px;
        right: 10px;
        font-size: 24px;
        background: none;
        border: none;
        cursor: pointer;
      "
    >
      &times;
    </button>

    <div
      id="imageGallery"
      style="
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        max-height: 400px;
        overflow-y: auto;
      "
    >
      <% uploadedImages.forEach(img => { %>
      <img
        src="/images/<%= img %>"
        alt="<%= img %>"
        style="
          width: 100px;
          height: 100px;
          cursor: pointer;
          border: 2px solid transparent;
        "
        onclick="selectImageFromModal('/images/<%= img %>', this)"
      />
      <% }) %>
    </div>
  </div>
</div>
